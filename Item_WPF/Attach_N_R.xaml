                            <Label x:Name="Label17" Content="Gurps Attach Type" HorizontalAlignment="Left" Margin="10,-4,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.333,1.231"/>
                            <Label x:Name="Label18" Content="GURPS Attach Class" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.421,0.47"/>
                            <ComboBox x:Name="GAttType3ComboBox" HorizontalAlignment="Left" Margin="164,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="GAttType3_comboBox_SelectionChanged" />
                            <ComboBox x:Name="GAttClass3ComboBox" HorizontalAlignment="Left" Margin="164,27,0,0" VerticalAlignment="Top" Width="120" />
                        </Grid>
