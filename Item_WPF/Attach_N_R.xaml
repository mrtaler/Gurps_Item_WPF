                        <Grid>
                            <GroupBox x:Name="GroupBox13" Header="Light" Margin="5,0,0,0" VerticalAlignment="Top" Height="104" HorizontalAlignment="Left" Width="187">
                                <Grid>
                                    <CheckBox x:Name="IrFilterCheckBox" Content="IR Filter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
