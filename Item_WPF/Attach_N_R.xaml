                            <Label x:Name="Label14" Content="GURPS Attach Class" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.421,0.47" Grid.ColumnSpan="2"/>
