                                           Margin="10,10,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="Laser Range" />
                                    <Label x:Name="Label29"
                                           Margin="10,37,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="Laser Color" />
                                    <Label x:Name="Label30"
                                           Margin="10,65,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="Laser Day Effect" />
