                                                     Margin="0,26,0,0"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Top"
                                                     Text="{Binding AttachLoad.ScopeMagMax}"
                                                     TextWrapping="NoWrap" />
                                            <TextBox x:Name="MinMagTextBox"
                                                     Width="35"
                                                     Height="23"
                                                     Margin="43,26,0,0"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Top"
                                                     Text="{Binding AttachLoad.ScopeMagMin}"
                                                     TextWrapping="Wrap" />
                                            <CheckBox x:Name="FixCheckBox"
                                                      Margin="1,54,0,0"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
