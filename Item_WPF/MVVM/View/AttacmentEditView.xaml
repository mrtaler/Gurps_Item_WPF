                                    <TextBox x:Name="LaserRangeEffTextBox"
                                             Width="56"
                                             Height="23"
                                             Margin="109,68,0,0"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Text="{Binding ElementName=LaserColorComboBox,
                                                            Path=SelectedItem.LaserColorDayEfect}"
                                             TextWrapping="Wrap" />
