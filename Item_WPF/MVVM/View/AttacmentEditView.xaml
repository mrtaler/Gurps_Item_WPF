                                      Width="187"
                                      Height="104"
                                      Margin="5,0,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Header="Light">
                                <Grid>
                                    <CheckBox x:Name="IrFilterCheckBox"
                                              Margin="10,10,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Content="IR Filter"
                                              IsChecked="{Binding AttachLoad.IRFilter}" />
