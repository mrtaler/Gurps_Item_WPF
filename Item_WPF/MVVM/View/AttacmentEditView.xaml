                                             VerticalAlignment="Top"
                                             Text="{Binding AttachLoad.LightRange}"
                                             TextWrapping="Wrap" />
                                    <TextBox x:Name="IrFilterRangeTextBox"
                                             Width="44"
                                             Height="23"
                                             Margin="103,56,0,0"
