                                              Width="54"
                                              Margin="85,20,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              DisplayMemberPath="SmolName"
                                              ItemsSource="{Binding BatteryColl}"
                                              SelectedValue="{Binding AttachLoad.usedBatType}"
                                              SelectedValuePath="id" />
                                    <Label x:Name="Label31"
                                           Margin="10,42,0,-1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Content="Time Work" />
                                    <TextBox x:Name="BatTimeWorkTextBox"
                                             Width="54"
                                             Height="20"
                                             Margin="85,44,0,0"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             Text="{Binding AttachLoad.BatTimeWork}"
