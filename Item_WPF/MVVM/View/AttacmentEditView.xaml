                Command="{Binding Save}"
                Content="Save" />
        <Button x:Name="CancelButton"
                Width="75"
                Margin="90,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="CancelButton_Click"
                Content="Cancel" />
        <Button x:Name="UndoButton"
                Width="75"
                Margin="170,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Content="AllUndo" />
    </Grid>
</Window>
