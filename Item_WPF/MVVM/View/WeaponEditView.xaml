<Window x:Class="Item_WPF.MVVM.View.WeaponEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:addin="clr-namespace:Item_WPF.addin"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="{Binding WeaponLoad.szWeaponName,
                        Mode=TwoWay}"
        Width="806"
        Height="485"
        mc:Ignorable="d">
    <Window.Resources>
        <addin:DatacontextTupeFromClass x:Key="DatacontextTypeFromClass" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <TabControl x:Name="TabControl" Margin="10,10,10,35">
            <TabItem x:Name="MainTi" Header="Main">
                <Grid x:Name="MainGrid"
                      Margin="0,0,0,8"
                      Background="#FFE5E5E5">
                    <Label x:Name="Label"
                           Width="87"
                           Margin="10,10,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Name" />
                    <Label x:Name="Label1"
                           Margin="10,41,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Long Name" />
                    <Label x:Name="Label2"
                           Width="267"
                           Margin="10,72,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="                         Description"
                           RenderTransformOrigin="1.733,0.551" />
                    <TextBox x:Name="NameTb"
                             Width="302"
                             Height="23"
                             Margin="102,14,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Text="{Binding ItemLoad.szItemName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
                    <TextBox x:Name="LongNameTb"
                             Width="302"
                             Height="23"
                             Margin="102,45,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Text="{Binding ItemLoad.szLongItemName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
                    <TextBox x:Name="DescriptionTb"
                             Width="394"
                             Margin="10,101,0,10"
                             HorizontalAlignment="Left"
                             AcceptsReturn="True"
                             Text="{Binding ItemLoad.szItemDesc,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Visible" />
                    <Image x:Name="ItemImage"
                           Width="353"
                           Height="248"
                           Margin="409,14,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Source="{Binding ItemLoad.Item_Image,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged,
                                            Converter={addin:ImageConverter}}" />
                    <Button x:Name="LoadImageButton"
                            Width="75"
                            Margin="409,267,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding LoadImage}"
                            Content="LoadImage" />
                    <Button x:Name="DeleteImageButton"
                            Width="75"
                            Margin="489,267,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding DellImage}"
                            Content="DelImage" />
                </Grid>
            </TabItem>
            <TabItem x:Name="GeneralTi" Header="General">
                <Grid Background="#FFE5E5E5">
                    <GroupBox x:Name="GroupBox1"
                              Width="260"
                              Height="308"
                              Margin="10,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="General">
                        <Grid x:Name="GeneralGrid">
                            <Label x:Name="Label3"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Weigth" />
                            <Label x:Name="Label6"
                                   Margin="10,38,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Cost" />
                            <Label x:Name="Label7"
                                   Margin="10,66,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Bulk" />
                            <Label x:Name="Label8"
                                   Margin="10,94,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="MinST" />
                            <Label x:Name="Label9"
                                   Margin="10,122,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="TL" />
                            <Label x:Name="Label10"
                                   Margin="10,149,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="LC" />

                            <TextBox x:Name="WeigthTb"
                                     Width="120"
                                     Height="23"
                                     Margin="93,10,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ItemLoad.ubWeight,
                                                    Mode=TwoWay,
                                                    Converter={addin:WeigtDeciminalConverter}}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="CostTb"
                                     Width="120"
                                     Height="23"
                                     Margin="93,38,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ItemLoad.usPrice,
                                                    Mode=TwoWay,
                                                    Converter={addin:CostDeciminalConverter}}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="BulkTb"
                                     Width="120"
                                     Height="23"
                                     Margin="93,66,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ItemLoad.ItemSize,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="MinStTb"
                                     Width="120"
                                     Height="23"
                                     Margin="93,94,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ItemLoad.minST,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />

                            <ComboBox x:Name="TlCb"
                                      Width="120"
                                      Margin="93,122,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="name_TL"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding TlCollection}"
                                      SelectedValue="{Binding ItemLoad.TL}"
                                      SelectedValuePath="Id_Tl" />
                            <ComboBox x:Name="LcCb"
                                      Width="120"
                                      Margin="93,149,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="Name_LC"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding LccCollection}"
                                      SelectedValue="{Binding ItemLoad.LC}"
                                      SelectedValuePath="Id_LC" />
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox"
                              Width="283"
                              Height="92"
                              Margin="275,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="TL">
                        <TextBlock x:Name="TlTextBlock"
                                   Margin="10,0,-2,5"
                                   Text="{Binding ElementName=TlCb,
                                                  Path=SelectedItem.Description,
                                                  UpdateSourceTrigger=PropertyChanged}"
                                   TextWrapping="Wrap" />
                    </GroupBox>
                    <GroupBox x:Name="GroupBox2"
                              Width="283"
                              Height="211"
                              Margin="275,107,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="LC">
                        <TextBlock x:Name="LcTextBlock"
                                   Margin="10,10,2,6"
                                   Text="{Binding ElementName=LcCb,
                                                  Path=SelectedItem.Description,
                                                  UpdateSourceTrigger=PropertyChanged}"
                                   TextWrapping="Wrap" />

                    </GroupBox>
                    <GroupBox x:Name="GroupBox3"
                              Width="199"
                              Height="308"
                              Margin="563,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Item Properties">
                        <Grid x:Name="ItemsGridGeneral">
                            <CheckBox x:Name="TwoHandedChB"
                                      Margin="10,10,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Two Handed"
                                      IsChecked="{Binding Path=ItemLoad.TwoHanded,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="HtChB"
                                      Margin="10,30,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="HT"
                                      IsChecked="{Binding Path=ItemLoad.HT,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="UtChB"
                                      Margin="10,50,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="UT"
                                      IsChecked="{Binding Path=ItemLoad.UT,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="NeedBatChB"
                                      Margin="10,170,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Need BAttery"
                                      IsChecked="{Binding Path=ItemLoad.NeedsBatteries,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="DamagebleChB"
                                      Margin="10,70,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Damageble"
                                      IsChecked="{Binding Path=ItemLoad.Damageable,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="RepairableChB"
                                      Margin="10,90,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Repairable"
                                      IsChecked="{Binding Path=ItemLoad.Repairable,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="WaterDamagebleChB"
                                      Margin="10,110,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Water damageable"
                                      IsChecked="{Binding Path=ItemLoad.WaterDamages,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="MetalChB"
                                      Margin="10,130,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Metal"
                                      IsChecked="{Binding Path=ItemLoad.Metal,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="ElectronicChB"
                                      Margin="10,150,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Electronic"
                                      IsChecked="{Binding Path=ItemLoad.Electronic,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <GroupBox x:Name="GroupBox12"
                                      Width="167"
                                      Height="93"
                                      Margin="10,190,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Header="Weapon">
                                <Grid x:Name="WeaponGridGeneral" Margin="0,0,-2,0">
                                    <CheckBox x:Name="HeavyWeaponChB"
                                              Margin="10,10,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Content="Heavy weapon"
                                              IsChecked="{Binding Path=WeaponLoad.HeavyWeapon,
                                                                  Mode=TwoWay,
                                                                  UpdateSourceTrigger=PropertyChanged}" />
                                    <CheckBox x:Name="MountChB"
                                              Margin="10,30,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Content="Mount"
                                              IsChecked="{Binding Path=WeaponLoad.Mount,
                                                                  Mode=TwoWay}" />
                                    <CheckBox x:Name="BulkFoldCheckBox"
                                              Margin="10,50,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Content="Bulk Fold"
                                              IsChecked="{Binding Path=WeaponLoad.Bulkfolded,
                                                                  Mode=TwoWay}" />
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="WeaponTi" Header="Weapon">
                <Grid x:Name="WeaponMainGrid" Background="#FFE5E5E5">
                    <GroupBox x:Name="GroupBox4"
                              Width="195"
                              Height="86"
                              Margin="10,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Type of Weapon">
                        <Grid x:Name="TypeOfWeapGrid">
                            <Label x:Name="Label4"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Class" />
                            <Label x:Name="Label5"
                                   Height="26"
                                   Margin="10,33,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Type" />
                            <ComboBox x:Name="ClassOfWeaponTb"
                                      Width="120"
                                      Margin="53,10,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="name"
                                      IsSynchronizedWithCurrentItem="True"
                                      ItemsSource="{Binding WeaponClasscCollection,
                                                            Mode=TwoWay,
                                                            UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValue="{Binding WeaponLoad.ubWeaponClass,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="id" />
                            <ComboBox x:Name="TypeOfClassWeapTb"
                                      Width="120"
                                      Margin="53,37,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="name"
                                      IsSynchronizedWithCurrentItem="True"
                                      SelectedValue="{Binding WeaponLoad.ubWeaponType,
                                                              Mode=TwoWay,
                                                              UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="id">
                                <ComboBox.ItemsSource>
                                    <MultiBinding Converter="{StaticResource DatacontextTypeFromClass}">
                                        <Binding Path="WeaponTypescCollection" />
                                        <Binding ElementName="ClassOfWeaponTb" Path="SelectedValue" />
                                    </MultiBinding>
                                </ComboBox.ItemsSource>
                            </ComboBox>

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox5"
                              Width="195"
                              Height="194"
                              Margin="10,101,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Damage">
                        <Grid x:Name="DamageWeaponGrid">
                            <Label x:Name="Label11"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Damage" />
                            <Label x:Name="Label12"
                                   Margin="10,41,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Type of Damage" />
                            <Label x:Name="Label13"
                                   Margin="10,72,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Arm Divizor" />
                            <Label x:Name="Label14"
                                   Margin="10,103,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Follow Up" />
                            <Label x:Name="Label15"
                                   Margin="10,134,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Linked" />

                            <TextBox x:Name="DamageTextBox"
                                     Width="75"
                                     Height="23"
                                     Margin="98,10,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Damage,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="ArmDivizorTextBox"
                                     Width="75"
                                     Height="23"
                                     Margin="98,76,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Arm_Division,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="FollowUpTextBox"
                                     Width="75"
                                     Height="23"
                                     Margin="98,106,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Follow_Up,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="LinkedTextBox"
                                     Width="75"
                                     Height="23"
                                     Margin="98,138,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Linked,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <ComboBox x:Name="TypeOfDamageComboBox"
                                      Width="61"
                                      Margin="112,45,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="name"
                                      SelectedValue="{Binding ubTypeOfDamage,
                                                              Mode=TwoWay}"
                                      SelectedValuePath="id" />



                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox6"
                              Width="181"
                              Height="116"
                              Margin="210,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Range">
                        <Grid x:Name="RangeGrid">
                            <Label x:Name="Label16"
                                   Margin="10,6,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Min Range"
                                   RenderTransformOrigin="0.433,0.077" />
                            <Label x:Name="Label17"
                                   Margin="10,34,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Half Range" />
                            <Label x:Name="Label18"
                                   Margin="10,62,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Max Range" />
                            <TextBox x:Name="MinRangeTextBox"
                                     Width="77"
                                     Height="23"
                                     Margin="82,10,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding MinRange,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="HalfRangeTextBox"
                                     Width="77"
                                     Height="23"
                                     Margin="82,38,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Half_Range,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="MaxRangeTextBox"
                                     Width="77"
                                     Height="23"
                                     Margin="82,66,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding FullRange,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox7"
                              Width="181"
                              Height="164"
                              Margin="210,131,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Shots">
                        <Grid x:Name="ShotsGrid">
                            <Label x:Name="Label19"
                                   Margin="10,6,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="ROF" />
                            <Label x:Name="ShLabel20"
                                   Margin="89,6,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="X"
                                   RenderTransformOrigin="0,0.5"
                                   Visibility="Hidden" />
                            <TextBox x:Name="RofTextBox"
                                     Width="30"
                                     Height="23"
                                     Margin="54,10,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ROF,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="ShrofTextBox"
                                     Width="30"
                                     Height="23"
                                     Margin="111,9,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding ROF_for_Sh,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap"
                                     Visibility="Hidden" />
                            <CheckBox x:Name="FullAutoCheckBox"
                                      Margin="10,38,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Full Auto"
                                      IsChecked="{Binding Path=Full_auto,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="Add1InChamblerCheckbox"
                                      Margin="10,58,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="1 Add"
                                      IsChecked="{Binding Path=Add_in_Chamber,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox x:Name="HcrofCheckBox2"
                                      Margin="88,38,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="HC ROF(#)" />
                            <CheckBox x:Name="CutOfShotsCheckBox"
                                      Margin="10,78,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Cut Of Shots"
                                      IsChecked="{Binding Path=CutOff_shots,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                            <Label x:Name="Label20"
                                   Margin="10,94,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Cut Of Shots"
                                   Visibility="Hidden" />
                            <TextBox x:Name="CutOfShotsTextBox"
                                     Width="120"
                                     Height="23"
                                     Margin="53,98,-4,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding CutOff_shotsCount,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap"
                                     Visibility="Hidden" />

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox8"
                              Width="237"
                              Height="94"
                              Margin="396,10,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Acc">
                        <Grid>
                            <TextBox x:Name="DefAccTextBox"
                                     Width="120"
                                     Height="23"
                                     Margin="95,10,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding DefACC,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="RecoilTextBox"
                                     Width="120"
                                     Height="23"
                                     Margin="95,38,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Recoil,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <Label x:Name="Label21"
                                   Margin="10,6,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Default ACC" />
                            <Label x:Name="Label22"
                                   Margin="10,34,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Recoil" />

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox9"
                              Width="237"
                              Height="186"
                              Margin="396,109,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Reload">
                        <Grid>
                            <Label x:Name="Label23"
                                   Margin="10,10,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Caliber" />
                            <Label x:Name="Label24"
                                   Margin="10,41,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Shots" />
                            <Label x:Name="Label25"
                                   Margin="10,72,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Reload Time" />
                            <ComboBox x:Name="CAliberComboBox"
                                      Width="120"
                                      Margin="73,14,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      DisplayMemberPath="Caliber_name"
                                      SelectedValue="{Binding ubCalibre,
                                                              Mode=TwoWay}"
                                      SelectedValuePath="id" />
                            <TextBox x:Name="ShotsTextBox"
                                     Width="120"
                                     Height="23"
                                     Margin="73,45,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Shots,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <TextBox x:Name="ReloadTimeTextbox"
                                     Width="102"
                                     Height="23"
                                     Margin="91,76,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     Text="{Binding Time_For_reload,
                                                    Mode=TwoWay}"
                                     TextWrapping="Wrap" />
                            <CheckBox x:Name="SingleReloadCheckBox"
                                      Margin="26,119,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Content="Single Reload"
                                      IsChecked="{Binding Path=single_reload,
                                                          Mode=TwoWay,
                                                          UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem x:Name="AttachTi" Header="Attach">
                <Grid Background="#FFE5E5E5">

                    <GroupBox x:Name="GroupBox10"
                              Width="156"
                              Height="361"
                              Margin="10,10,0,0"
